/* components/DIYView/DIYView.wxss */
.panel {
  width: 100%;
  height: 100%;
  z-index: 1000;
  position: fixed;
}
.maskingView {
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: inline-block;
}
.contentView {
  margin: 200rpx 0 0 77rpx;
  width:596rpx;
  height:448rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 6px rgba(19,19,19,0.2);
  border-radius:10px;
}
.noticeTitle {
  padding-top: 40rpx;
  text-align: center;
  line-height: 60rpx;
  width:596rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(72,72,72,1);
}
.noticeSubTitle {
  padding-bottom: 40rpx;
  text-align: center;
  width:596rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(152,152,152,1);
}
.inputView {
  margin-left: 38rpx;
  width:520rpx;
  height:60rpx;
  border:1rpx solid rgba(198,198,198,1);
  border-radius:6rpx;
}
.buttonPanel {
  margin-top: 70rpx;
  margin-left: 38rpx;
  display: flex;
  color: white;
  text-align: center;
}
.buttonCancel {
  width:252rpx;
  line-height:70rpx;
  background:rgba(213,25,43,1);
  border-radius:6rpx;
}
.buttonConfirm {
  margin-left: 16rpx;
  width:252rpx;
  line-height:70rpx;
  background:rgba(25,166,213,1);
  border-radius:6rpx;
}