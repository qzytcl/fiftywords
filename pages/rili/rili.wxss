/* pages/rili/rili.wxss */
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    line-height:1.6;
}
.weui-flex {
  display: -webkit-box;
}
.weui-flex__item {
  -webkit-box-flex: 1;
  -webkit-flex:1;
  flex: 1;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 20px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}
.mini-btn{
    margin-right: 5px;
}
.weui-btn {
  margin-top: 15px;
}
.noticeholder {
    margin: 5px;
    padding: 0 10px;
    text-align: center; 
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #000000;
}
.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center; 
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}